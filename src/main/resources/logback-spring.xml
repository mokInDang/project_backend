<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>[%d{yyyy-MM-dd HH:mm:ss}:%-3relative][%thread] %-5level %logger{36} - %msg%n</Pattern>
        </layout>
    </appender>

    <springProfile name="local">
        <appender name="ASYNC_STDOUT" class="ch.qos.logback.classic.AsyncAppender">
            <queueSize>10000</queueSize>
            <maxFlushTime>0</maxFlushTime>
            <appender-ref ref="STDOUT"/>
        </appender>
        <logger name="mokindang.jubging" level="DEBUG" appender-ref="ASYNC_STDOUT"/>
        <root level="INFO">
            <appender-ref ref="ASYNC_STDOUT"/>
        </root>
    </springProfile>

    <springProfile name="ci">
        <appender name="ASYNC_INFO_LOG_FILE" class="ch.qos.logback.classic.AsyncAppender">
            <maxFlushTime>0</maxFlushTime>
            <appender-ref ref="INFO_LOG_FILE"/>
        </appender>
        <root level="INFO">
            <appender-ref ref="ASYNC_INFO_LOG_FILE"/>
        </root>
    </springProfile>

    <appender name="INFO_LOG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>./logs/info.log</file>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}:%-3relative][%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>./logs/info.%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>100</maxHistory>
        </rollingPolicy>
    </appender>

    <appender name="ASYNC_INFO_LOG_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>10000</queueSize>
        <maxFlushTime>0</maxFlushTime>
        <appender-ref ref="INFO_LOG_FILE"/>
    </appender>

    <springProfile name="deploy">
        <logger name="mokindang.jubging" level="INFO" appender-ref="ASYNC_INFO_LOG_FILE"/>
        <root level="INFO">
            <appender-ref ref="ASYNC_INFO_LOG_FILE"/>
        </root>
    </springProfile>
</configuration>
